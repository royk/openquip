<div class="well">
	<div class="form-group">
		<label>
			Project Name
		</label>	
		{{input value=name focus-out="save" classNames="form-control"}}
		
	<div class="form-group">
		<label>
			Project Type
		</label>	
			{{view Ember.Select 
				content=platforms 
				optionLabelPath="content.name" 
				optionValuePath="content.id" 
				selectionBinding="platformId"
				classNames="form-control"
			}}
		
	</div>
	<div class="form-group">
		<label>
			Project Description
		</label>	
			{{textarea value=description focus-out="save" classNames="form-control"}}
		
	</div>

</div>